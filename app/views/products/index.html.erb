<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <div class="product">
      <h2><%= link_to product.name, product %></h2>
      <div class="details">
        <%= number_to_currency(product.price) %>
      </div>
    </div>
  <% end %>
</div>

<p><%= link_to "New Product", new_product_path %></p>
